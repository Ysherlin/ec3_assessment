{
  "info": {
    "_postman_id": "7a2c2a9d-8a3f-4b65-9e66-0d0ed82c9a33",
    "name": "EC3 Leads API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "description": "EC3 assessment - FastAPI + MariaDB Leads CRUD collection."
  },
  "item": [
    {
      "name": "Health",
      "item": [
        {
          "name": "GET Health",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/health",
              "host": ["{{baseUrl}}"],
              "path": ["health"]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "pm.test('Status code is 200', function () {",
                  "  pm.response.to.have.status(200);",
                  "});",
                  "",
                  "pm.test('Response has status ok', function () {",
                  "  const json = pm.response.json();",
                  "  pm.expect(json).to.have.property('status');",
                  "  pm.expect(json.status).to.eql('ok');",
                  "});"
                ]
              }
            }
          ]
        }
      ]
    },
    {
      "name": "Leads",
      "item": [
        {
          "name": "POST Create Lead",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json",
                "type": "text"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Ysherlin\",\n  \"email\": \"{{leadEmail}}\",\n  \"phone\": \"0123456788\",\n  \"source\": \"Referral\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/leads",
              "host": ["{{baseUrl}}"],
              "path": ["leads"]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "// Accept either: 201 created OR 400 duplicate email (if run multiple times)",
                  "pm.test('Status is 201 or 400', function () {",
                  "  pm.expect([201, 400]).to.include(pm.response.code);",
                  "});",
                  "",
                  "if (pm.response.code === 201) {",
                  "  const json = pm.response.json();",
                  "  pm.test('Response has id', function () {",
                  "    pm.expect(json).to.have.property('id');",
                  "  });",
                  "  pm.environment.set('leadId', json.id);",
                  "}"
                ]
              }
            }
          ]
        },
        {
          "name": "GET Leads (List)",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/leads",
              "host": ["{{baseUrl}}"],
              "path": ["leads"]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "pm.test('Status code is 200', function () {",
                  "  pm.response.to.have.status(200);",
                  "});",
                  "",
                  "pm.test('Response is an array', function () {",
                  "  const json = pm.response.json();",
                  "  pm.expect(json).to.be.an('array');",
                  "});"
                ]
              }
            }
          ]
        },
        {
          "name": "GET Leads (List with Pagination & Filtering)",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/leads?skip=0&limit=10&name=&email=&source=",
              "host": ["{{baseUrl}}"],
              "path": ["leads"],
              "query": [
                { "key": "skip", "value": "0" },
                { "key": "limit", "value": "10" },
                { "key": "name", "value": "" },
                { "key": "email", "value": "" },
                { "key": "source", "value": "" }
              ]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "pm.test('Status code is 200', function () {",
                  "  pm.response.to.have.status(200);",
                  "});"
                ]
              }
            }
          ]
        },
        {
          "name": "GET Lead By ID",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/leads/{{leadId}}",
              "host": ["{{baseUrl}}"],
              "path": ["leads", "{{leadId}}"]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "// Accept 200 if exists, 404 if you deleted it earlier",
                  "pm.test('Status is 200 or 404', function () {",
                  "  pm.expect([200, 404]).to.include(pm.response.code);",
                  "});"
                ]
              }
            }
          ]
        },
        {
          "name": "PUT Update Lead (Partial Update via PUT)",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json",
                "type": "text"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"phone\": \"0111111111\",\n  \"source\": \"Updated via Postman\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/leads/{{leadId}}",
              "host": ["{{baseUrl}}"],
              "path": ["leads", "{{leadId}}"]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "// Accept 200 if exists, 404 if missing",
                  "pm.test('Status is 200 or 404', function () {",
                  "  pm.expect([200, 404]).to.include(pm.response.code);",
                  "});"
                ]
              }
            }
          ]
        },
        {
          "name": "DELETE Lead",
          "request": {
            "method": "DELETE",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/leads/{{leadId}}",
              "host": ["{{baseUrl}}"],
              "path": ["leads", "{{leadId}}"]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "// Accept 204 if deleted, 404 if already missing",
                  "pm.test('Status is 204 or 404', function () {",
                  "  pm.expect([204, 404]).to.include(pm.response.code);",
                  "});"
                ]
              }
            }
          ]
        }
      ]
    }
  ]
}
